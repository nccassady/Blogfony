{% extends 'NCCBlogBundle::base.html.twig' %}

{% block body -%}
    <h1>{{ entity.username }}</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Email</th>
                <td>{{ entity.email }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.realName }}</td>
            </tr>
            <tr>
                <th>About</th>
                <td>{{ entity.about }}</td>
            </tr>
        </tbody>
    </table>

    <ul class="record_actions">
        <li>
            <a href="{{ path('user') }}">
                Back to the list
            </a>
        </li>
    </ul>
{% endblock %}
